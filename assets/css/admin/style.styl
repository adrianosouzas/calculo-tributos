meyer-reset()
box-sizing-reset()

/* ELEMENTS ------------------------------------------------------------------------------------------------------- */
body, 
button, 
input, 
textarea, 
select
    font 12px Tahoma, Verdana, sans-serif

body
    background #eee

h1
    float left
    height 62px
    margin 20px 0 0 20px
    width auto

h1,
h1 a
    color #000
    font-size 40px
    line-height 80px
    text-decoration none

h2
    font-size 20px
    line-height 24px
    margin-right 15px
    padding-bottom 15px

h3
    font-weight bold

p
    margin-bottom 10px

table
    border-collapse collapse
    width 100%

th,
tfoot td
    background #eee

th,
td
    border-bottom 1px solid #eee
    line-height 16px
    padding 8px 5px
    vertical-align middle

tfoot
    td
        padding-left 9px
        padding-right 9px


input,
textarea
    line-height 16px
    padding 4px


/* contador do text area */
.contador
    color #7CBDFF
    font-size 11px


select
    padding 3px 2px

input
    height 29px

input,
textarea,
select
    background #fff

form
    h2
        padding-left 0

    ul
        margin-bottom 30px

        ul
            margin 0

    li
        margin-bottom 12px

    label
        display block
        float left
        line-height 26px
        margin-right 5px
        width 130px

    input
        width 250px

    textarea
        width 550px
        height 600px

    input,
    textarea,
    select,
    object
        border 1px solid #ccc

a.new,
a.back
    border 1px solid #bbb
    color black
    display block
    line-height 29px
    padding-left 3px
    padding-right 3px
    text-align center

form .submit,
a.new
    background #ddd
    float right
    height 29px
    width 100px

form .submit,
a.back
    background #ddd
    float right
    height 29px
    margin-right 5px
    width 100px

form .submit:hover,
a.new:hover,
a.back:hover
    cursor pointer
    background #b9dafc
    border 1px solid #74b8ff

form .submit,
a.new,
a.back,
form object
    border-radius 3px
    box-shadow 0 0 5px 0 #ccc

form #li-usuario-data_nascimento label,
form #li-imprensa-data_publicacao label,
form #li-destaque-data_publicacao label,
form #li-impermeabilizacao-tipo label,
form #li-impermeabilizacao-local label,
form #li-treinamento_solicitacao-data_solicitacao label,
form #li-impermeabilizacao-produto label
    line-height 12px

/* Login ---------------------------------------------------------------------------------------------------------- */
#page-login-login
    #column-left
        background none
        border-radius 5px
        margin 0 auto
        padding-top 0
        width 405px

    form
        background #fff
        margin 0 auto
        padding 20px

    fieldset
        border-top 0
        padding-top 0

    .text
        height 29px
        width 255px

    ul
        margin-bottom 0

    label
        width 100px

    .list-messages
        margin 0 auto
        width 390px


/* MAIN ----------------------------------------------------------------------------------------------------------- */
#main
    margin 0 auto
    width 100%

/* HEADER --------------------------------------------------------------------------------------------------------- */
#header
    height 100px
    position relative

#nav
    position absolute
    right 20px
    bottom 20px

    h3
        font-weight bold

    li
        float left

    a
        color #000

/* CONTENT -------------------------------------------------------------------------------------------------------- */
#content
    padding 20px
    overflow hidden

#column-left
    background #fff
    padding-top 15px
    overflow hidden
    box-shadow 0 0 15px 1px #666

#column-right
    float right
    margin-left 30px
    width 200px

#nav-right h3
    border-bottom 1px solid #000

#nav-right a
    background url(../../admin/images/bg_nav_right_a.png) no-repeat 0 center
    border-bottom 1px dashed #777
    color #333

#nav-right ul ul a
    padding-left 46px

#nav-right a:hover
    color #000

#nav-right h3,
#nav-right a
    padding-left 26px

#nav-right a,
#nav-block a
    display block

#nav-right h3,
#nav-right a,
#nav-block a
    line-height 35px

#content-head
    padding 0 15px

#content-head h3
    font-size 22px

#content-body
    padding 0 15px 15px

#uploadify-foto-queue
    margin-top 10px

.form form
    margin-bottom 0

.item-add
    font-size 12px

.item-del
    position absolute
    right 5px
    top 5px

.list-item
    margin-bottom 30px

.list-item > ul
    overflow hidden

.list-item > ul > li
    background #e5e5e5
    border 2px solid #E5E5E5
    float left
    margin-bottom 5px
    margin-right 5px
    padding 4px
    position relative
    width 640px

.list-item
    textarea width 500px

.list-foto
    margin 0 0 20px 0

/* CLASS ---------------------------------------------------------------------------------------------------------- */
.list-check
    overflow hidden

.list-check li
    float left
    margin-bottom 0
    margin-right 10px
    overflow hidden

.list-check img
    float left
    margin-right 5px

.list-check label
    width auto

form #li-impermeabilizacao-tipo .list-check label,
form #li-impermeabilizacao-local .list-check label,
form #li-impermeabilizacao-produto .list-check label
    line-height 26px

input.radio
    width auto
input.radio-atributo
    width 50px !important

input.check
    float left
    margin-right 5px
    margin-top 7px
    width auto

input.radio,
input.check
    border 0
    background none

th.action,
td.action
    text-align center
    width 20px

th.last,
td.last
    text-align center
    width 80px

    a
        color #000

th.string,
td.string
    text-align left

th.date,
td.date,
th.datetime,
td.datetime
    text-align center

th.int,
td.int
    text-align left

th.image,
td.image
    text-align center
    width 75px

td.form form fieldset
    border 0
    padding 0

td.form form li
    margin 0

td.form form label
    display none

.hover
    background #b9dafc
    border-bottom 1px solid #b9dafc

.shadow
    border-color #7cbdff
    box-shadow 0 0 5px 1px #b9dafc

div.error
    color #f00

.error-ordem
    border 1px dotted #f00

div.error,
div.hint
    font-size 11px
    margin-top 2px

.tiny_mce
    display block

.set-privacy
    background-image url(../../admin/images/bg_privacy.png)
    top -2px
    display none
    height 29px
    left -2px
    position absolute
    width 120px

.set-privacy .privacy-add
    background-image url(../../admin/images/bt_add.png)

.set-privacy .privacy-remove
    background-image url(../../admin/images/bt_remove.png)

.set-privacy .privacy-add,
.set-privacy .privacy-remove
    background-position 4px center
    background-repeat no-repeat
    display block
    height 29px
    color #fff
    line-height 29px
    padding-left 24px

.privacy-added
    border-color #82ce76

/* FIND ----------------------------------------------------------------------------------------------------------- */
#find
    position relative

#find .search
    background-image url(../../admin/images/sprite_icons.png)
    background-position 0 0
    background-repeat no-repeat
    display block
    height 24px
    text-indent -999999px
    position absolute
    right 0
    top -39px
    width 34px

#find .search:hover
    background-position 0 -24px

#find .search.click
    background-position 0 -48px

#find form
    background #eee
    border 1px solid #bbb
    padding 10px
    margin-bottom 15px

#find fieldset
    border-top 0
    padding-top 0

#find ul
    margin-bottom 0

#find form,
#find input
    border-radius 3px

#find .date
    width 120px

#find .submit
    margin-left 10px

/* PAGINACAO ------------------------------------------------------------------------------------------------------ */
.paginacao
    float left
    margin 7px 0 0
    overflow hidden

.paginacao a
    color #333

.paginacao a,
.paginacao span
    display block
    float left
    height 20px
    text-align center
    width 20px

.paginacao-itens .active
    font-weight bold

.paginacao .next,
.paginacao .prev,
.paginacao-itens
    float left

.paginacao .next,
.paginacao .prev
    width auto

/* SHADOWBOX ------------------------------------------------------------------------------------------------------ */

#sb-title
    z-index 1

#sb-wrapper-inner
    box-shadow 0 0 100px 2px #000

/* Status da Obra ------------------------------------------------------------------------------------------------- */
#form-sp_status_obra #sp_status_obra-descricao
    height 100px !important


/* Mensagem de alert ---------------------------------------------------------------------------------------------- */
.alert
    padding 15px
    margin-bottom 20px
    border 1px solid transparent
    border-radius 4px

.alert-success
    color #3c763d
    background-color #dff0d8
    border-color #d6e9c6

.alert-warning
    color #8a6d3b
    background-color #fcf8e3
    border-color #faebcc

.alert-danger
    color #a94442
    background-color #f2dede;
    border-color #ebccd1